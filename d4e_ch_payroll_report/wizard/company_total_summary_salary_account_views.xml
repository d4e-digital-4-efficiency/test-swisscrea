<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="companytotal_summarysalary_account_wizard_form" model="ir.ui.view">
            <field name="name">company.total.summary.salary.account.wizard.form</field>
            <field name="model">company.total.summary.salary.account</field>
            <field name="arch" type="xml">
                <form>
                    <p class="text-muted">
                        Si vous laissez le champ 'Employé' vide, le rapport sera généré pour tous les employés.
                    </p>
                    <group>
                        <field name="emp_id"/>
                        <field name="certif_year" required="1"/>
                    </group>
                    <footer>
                        <button string="Print" name="print_report" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="companytotal_summarysalary_account_wizard_action" model="ir.actions.act_window">
            <field name="name">Print Company Total Summary Salary Account Report</field>
            <field name="res_model">company.total.summary.salary.account</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_companytotal_summarysalary_account"
            name="Récapitulation annuelle des salaires"
            action="companytotal_summarysalary_account_wizard_action"
            parent="hr_payroll.menu_hr_payroll_report"
            sequence="30"/>

    </data>
</odoo>
