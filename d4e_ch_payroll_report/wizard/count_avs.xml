<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_avs_wizard_form" model="ir.ui.view">
            <field name="name">account.avs.wizard.form</field>
            <field name="model">account.avs</field>
            <field name="arch" type="xml">
                <form>
                    <p class="text-muted">
                        Si vous laissez le champ 'Employé' vide, le rapport sera généré pour tous les employés  étant soumis AVS.
                    </p>
                    <group>
                        <field name="emp_id" widget="many2many_tags"/>
                        <field name="certif_year" required="1"/>
                    </group>
                    <footer>
                        <button string="Print" name="print_report" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="account_wizard_action" model="ir.actions.act_window">
            <field name="name">Print account AVS</field>
            <field name="res_model">account.avs</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="menu_AVS_account"
                  name="Décompte AVS"
                  action="account_wizard_action"
                  parent="hr_payroll.menu_hr_payroll_report"
                  sequence="30"/>

    </data>
</odoo>
