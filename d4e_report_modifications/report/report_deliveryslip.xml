<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="delivery.report_delivery_document2" model="ir.ui.view">
         <field name="active">False</field>
    </record>
    <record id="mrp.stock_report_delivery_document_inherit_mrp" model="ir.ui.view">
         <field name="active">False</field>
    </record>

    <record id="paperformat_slip_delevery" model="report.paperformat">
        <field name="name">Deliveryslip A4</field>
        <field name="margin_left">1</field>
        <field name="margin_right">1</field>
        <field name="margin_top">50</field>
        <field name="margin_bottom">15</field>
        <field name="header_spacing">37</field>
        <field name="default" eval="True" />
        <field name="orientation">Portrait</field>
        <field name="header_spacing">55</field>
    </record>

    <record id="stock.action_report_delivery" model="ir.actions.report">
        <field name="paperformat_id" ref="d4e_report_modifications.paperformat_slip_delevery"/>
    </record>


    <template id="external_layout_standard">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row" style="padding-top: 50px; ">
                <div class="col-6" name="company_address">
                    <div>
                        <strong> <span t-field="company.partner_id.name" style="font-size: 15px; font-weight: bold; " /> </strong>
                        <span t-field="company.partner_id.street" style="font-size: 13px;"/>
                        <br></br>
                        <span t-field="company.partner_id.city" style="font-size: 13px; padding: 0px; margin: 0px;"/> <span t-field="company.partner_id.zip" style="font-size: 13px; padding: 0px"/>
                        <br></br>
                        Tel: <span t-field="company.partner_id.phone" style="font-size: 13px; padding: 0px; margin: 0px;"/>
                        <br></br>
                        <span t-field="company.partner_id.email" style="font-size: 13px; padding: 0px; margin: 0px;"/>
                        <br></br>
                        <span t-field="company.partner_id.website" style="font-size: 13px; padding: 0px; margin: 0px;"/>
                        <br></br>
                        <span t-field="company.partner_id.vat" style="font-size: 13px; padding: 0px; margin: 0px;"/>
                    </div>
                </div>
                <div class="col-12 mb4" style="margin-right: 0px; margin-left:150px; float:right;">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 100px;" alt="Logo"/>
                </div>
            </div>
        </div>



        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone" class="list-inline-item d-inline"><span class="o_force_ltr" t-field="company.phone"/></li>
                    <li t-if="company.email" class="list-inline-item d-inline"><span t-field="company.email"/></li>
                    <li t-if="company.website" class="list-inline-item d-inline"><span t-field="company.website"/></li>
                    <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                </ul>

                <div name="financial_infos" style="height: 100px;">
                    <span t-field="company.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-call="d4e_report_modifications.external_layout_standard"><t t-raw="0"/></t>

    </template>


    <template id="stock.report_delivery_document">
        <t t-call="web.html_container">
            <t t-call="d4e_report_modifications.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                <t t-if="partner" name="partner_header">
                    <t t-set="address">
                        <div t-esc="partner"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                   </t>
                </t>
                <div class="page" >
                    <div class="row" style="border:1px solid; width: 300px; height:25px; margin-left:2px; font-size : 0.8rem !important" >
                        <t t-set="title" t-value="'Bulletin de livraison N Â° '+ o.name_report"/>
                        <span t-esc="title" style="font-weight:bold; margin-left: 15px;"/>
                        <span style="margin-left: 15px; font-weight:bold;"/>
                    </div>
                    <div class="row" style="margin-left:2px; font-size : 0.8rem !important">
                        <br></br>
                        <strong t-if="o.partner_id.ref" style="margin-left: 15px">Customer Reference :</strong> <span t-field="o.partner_id.ref"/>
                        <br></br>
                        <strong style="margin-left: 15px">Date : </strong>
                        <span t-esc="datetime.date.today().strftime('%d.%m.%Y')" />
                        <br></br>
                        <br></br>
                    </div>
                    <div class="row mt32 mb32">
                        <div t-if="o.state" class="col-auto" name="div_sched_date">
                        </div>
                    </div>

                    <table  t-if="o.state!='done'" style="width: 100%; font-size : 0.7rem !important">
                        <style>
                            th, td {
                                margin: 5px;
                                padding: 5px;
                            }
                        </style>
                        <thead>
                            <tr>
                                <th style="border: 1px solid black;"><strong>Description</strong></th>
                                <th style="border: 1px solid black;"><strong>Quantity</strong></th>
                                <th style="border: 1px solid black;"><strong>Price</strong></th>
                                <th style="border: 1px solid black;"><strong>VAT</strong></th>
                                <th style="border: 1px solid black;"><strong>Amount</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <t t-set="amount_total_move" t-value="0"/>
                            <tr t-foreach="lines" t-as="move">
                                <t t-set="amount_total_move" t-value="amount_total_move + move.sale_line_id.price_subtotal"/>
                                <td>
                                    <span t-field="move.product_id"/>
                                    <p t-if="move.description_picking != move.product_id.name">
                                        <span t-field="move.description_picking"/>
                                    </p>
                                </td>
                                <td>
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td>
                                    <span t-field="move.sale_line_id.price_unit"/>
                                </td>
                                <td>
                                    <span t-field="move.sale_line_id.tax_id"/>
                                </td>
                                <td>
                                    <span t-field="move.sale_line_id.price_subtotal"/>
                                </td>
                            </tr>
                            <tr style="border-top: 1px solid black;">
                                <td></td>
                                <td></td>
                                <td style="border-top: 1px solid black; font-weight: bold;">Total</td>
                                <td style="border-top: 1px solid black;"></td>
                                <td style="border-top: 1px solid black;">
                                    <span t-esc="'%.2f' %  amount_total_move"/>
                                    <t t-esc="o.company_id.currency_id.symbol"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table style="width: 100%; font-size : 0.7rem !important" t-if="o.move_line_ids and o.state=='done'" name="stock_move_line_table">
                        <style>
                            th, td {
                                margin: 5px;
                                padding: 5px;
                            }
                        </style>
                        <t t-set="has_serial_number" t-value="False"/>
                        <t t-set="has_serial_number" t-value="o.move_line_ids" groups="stock.group_lot_on_delivery_slip"/>
                        <thead>
                            <tr>
                                <th style="border: 1px solid black;"><strong>Description</strong></th>
                                <t name="lot_serial" t-if="has_serial_number">
                                    <th>
                                        Lot/Serial Number
                                    </th>
                                </t>
                                <th style="border: 1px solid black;"><strong>Quantity</strong></th>
                                <th style="border: 1px solid black;"><strong>Price</strong></th>
                                <th style="border: 1px solid black;"><strong>VAT</strong></th>
                                <th style="border: 1px solid black;"><strong>Amount</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <t t-set="amount_total_move" t-value="0"/>
                            <tr t-foreach="lines" t-as="move">
                                <t t-set="amount_total_move" t-value="amount_total_move + move.sale_line_id.price_subtotal"/>
                                <td>
                                    <span t-field="move.product_id"/>
                                    <p t-if="move.description_picking != move.product_id.name">
                                        <span t-field="move.description_picking"/>
                                    </p>
                                </td>
                                <td>
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td>
                                    <span t-field="move.sale_line_id.price_unit"/>
                                </td>
                                <td>
                                    <span t-field="move.sale_line_id.tax_id"/>
                                </td>
                                <td>
                                    <span t-field="move.sale_line_id.price_subtotal"/>
                                </td>
                            </tr>
                            <tr style="border-top: 1px solid black;">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Total</td>
                                <td>
                                    <span t-esc="'%.2f' %  amount_total_move"/>
                                    <t t-esc="o.company_id.currency_id.symbol"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <t t-set="backorders" t-value="o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))"/>
                    <t t-if="o.backorder_ids and backorders">
                        <table style="width: 100%; font-size : 0.7rem !important" name="stock_backorder_table">
                            <style>
                                th, td {
                                    margin: 5px;
                                    padding: 5px;
                                }
                            </style>
                            <thead>
                                <tr>
                                    <th style="border: 1px solid black;"><strong>Description</strong></th>
                                    <th style="border: 1px solid black;"><strong>Quantity</strong></th>
                                    <th style="border: 1px solid black;"><strong>Price</strong></th>
                                    <th style="border: 1px solid black;"><strong>VAT</strong></th>
                                    <th style="border: 1px solid black;"><strong>Montant</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="backorders" t-as="backorder">
                                    <t t-set="bo_lines" t-value="backorder.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                                    <t t-set="amount_total" t-value="0"/>
                                    <tr t-foreach="bo_lines" t-as="bo_line">

                                        <t t-set="amount_total" t-value="amount_total + bo_line.sale_line_id.price_subtotal"/>

                                        <td>
                                            <span t-field="bo_line.product_id"/>
                                            <p t-if="bo_line.description_picking != bo_line.product_id.name">
                                                <span t-field="bo_line.description_picking"/>
                                            </p>
                                        </td>
                                        <td>
                                            <span t-field="bo_line.product_uom_qty"/>
                                            <span t-field="bo_line.product_uom"/>
                                        </td>
                                        <td>
                                            <span t-field="bo_line.sale_line_id.price_unit"/>
                                        </td>
                                        <td>
                                            <span t-field="bo_line.sale_line_id.tax_id"/>
                                        </td>
                                        <td>
                                            <span t-field="bo_line.sale_line_id.price_subtotal"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border-top: 1px solid black;"></td>
                                        <td style="border-top: 1px solid black;"></td>
                                        <td style="border-top: 1px solid black;">Total</td>
                                        <td style="border-top: 1px solid black;"></td>
                                        <td style="border-top: 1px solid black;">
                                            <span t-esc="'%.2f' %  amount_total"/>
                                            <t t-esc="backorders.company_id.currency_id.symbol"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </t>
                    <div class="row" style="width:100%; margin-left:10px; font-size : 0.7rem !important;">
                        <t t-if="o.sale_id.amount_untaxed" t-set="tax_rate" t-value="(o.sale_id.amount_tax / o.sale_id.amount_untaxed) * 100"/>
                        Tax included <span t-if="tax_rate" t-esc=" '%.2f' %  tax_rate"/> % / <span t-field="o.sale_id.amount_untaxed"/> : <span t-field="o.sale_id.amount_tax"/>
                        <br></br>
                        <t t-if="o.sale_id.payment_term_id">Net payment to <span t-field="o.sale_id.payment_term_id"/></t>
                        <br></br>
                        With our thanks
                        <br></br>
<!--                        Team .....-->
<!--                        <br></br>-->
                    </div>
                    <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="o.partner_id.name"/>
                        </div>
                    </div>
                </div>
            </t>
         </t>
    </template>

</odoo>
