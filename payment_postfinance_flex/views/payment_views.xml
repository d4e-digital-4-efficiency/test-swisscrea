<odoo>

	<record id="acquirer_form_postfinance" model="ir.ui.view">
		<field name="name">payment.acquirer.form.inherit</field>
		<field name="model">payment.acquirer</field>
		<field name="inherit_id" ref="payment.acquirer_form" />
		<field name="arch" type="xml">
			<xpath expr="//sheet/field[1]" position='before'>
				<div class="oe_button_box" name="button_box">
					<button class="oe_stat_button" type="object"
						name="action_view_postfinance_payment_methods"
						groups="base.group_system"
						attrs="{'invisible': [('provider', '!=', 'postfinance')]}"
						icon="fa-credit-card">
						<div class="o_stat_info o_field_widget">
							<span class="o_stat_text">PostFinance Gateways</span>
						</div>
					</button>
					<button class="oe_stat_button" type="action"
						name="%(payment_postfinance_flex.action_postfinance_payment_acquirer_log)d"
						groups="base.group_system"
						attrs="{'invisible': [('provider', '!=', 'postfinance')]}"
						icon="fa-history">
						<div class="o_stat_info o_field_widget">
							<span class="o_stat_text">PostFinance Logging</span>
						</div>
					</button>
				</div>
			</xpath>
			<xpath expr='//group[@name="acquirer"]' position='after'>
				<group attrs="{'invisible': [('provider', '!=', 'postfinance')]}">
					<field name="postfinance_api_userid" />
					<field name="postfinance_api_spaceid" />
					<field name="postfinance_api_application_key" password="True" />
				</group>
			</xpath>
			<field name="authorize_implemented" position="after">
				<field name="hide_registration_templ" invisible="1" />
				<field name="hide_specific_countries" invisible="1" />
				<field name="hide_payment_icon_ids" invisible="1" />
				<field name="hide_env_button" invisible="1" />
			</field>		
			<field name="journal_id" position="attributes">
				<attribute name="attrs">{'required': [('provider', '=', 'postfinance')]}</attribute>
			</field>
			<field name="journal_id" position="after">
				<field name="send_status_email" />
			</field>
			<xpath
				expr="//group[@name='acquirer_config']//field[@name='registration_view_template_id']"
				position="attributes">
				<attribute name="attrs">{
					'invisible': [('hide_registration_templ', '=', True)]
				}</attribute>
			</xpath>
			<xpath
				expr="//group[@name='availability']"
				position="attributes">
				<attribute name="attrs">{
					'invisible': [('hide_specific_countries', '=', True)]
				}</attribute>
			</xpath>
			<xpath
				expr="//field[@name='payment_icon_ids']"
				position="attributes">
				<attribute name="attrs">{
					'invisible': [('hide_payment_icon_ids', '=', True)]
				}</attribute>
			</xpath>
			<!-- <xpath
				expr="//button[@name='toggle_environment_value'][1]"
				position="attributes">
				<attribute name="attrs">{
					'invisible': ['|', '|', 
						('environment', '=', 'test'), 
						('provider', '=', 'transfer'), 
						('hide_env_button', '=', True)
					]
				}</attribute>
			</xpath>
			<xpath
				expr="//button[@name='toggle_environment_value'][2]"
				position="attributes">
				<attribute name="attrs">{
					'invisible': ['|', '|', 
						('environment', '=', 'prod'), 
						('provider', '=', 'transfer'), 
						('hide_env_button', '=', True)
					]
				}</attribute>
			</xpath>	 -->
		</field>
	</record>
	
	<record id="transaction_form_inherit_payment_postfinance_flex" model="ir.ui.view">
		<field name="name">payment.transaction.form.inherit</field>
		<field name="model">payment.transaction</field>
		<field name="inherit_id" ref="payment.transaction_form" />
		<field name="arch" type="xml">
			<field name="provider" position="after">
				<field name="postfinance_state" attrs="{'invisible': [('provider', '!=', 'postfinance')]}" />
			</field>
			<xpath expr='//form' position='inside'>
				<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
			</xpath>
		</field>
	</record>
</odoo>
