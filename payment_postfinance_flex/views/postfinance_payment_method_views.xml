<odoo>

	<record id="view_postfinance_payment_method_form" model="ir.ui.view">
		<field name="name">postfinance.payment.method.form</field>
		<field name="model">postfinance.payment.method</field>
		<field name="arch" type="xml">
			<form string="PostFinance Payment Gateways" create="false"
				delete="false" edit="false">
                <header>
                	<!-- <button name="action_post_data" type="object" string="Post To Server" class="oe_highlight" groups="base.group_system"/> -->
                </header>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<!-- <button class="oe_stat_button" type="object"
							name="update_postfinance_payment_methods" groups="base.group_system"
							icon="fa-money" string="PostFinance Spaces">
						</button> -->
					</div>
					<group>
						<field name="name" />
						<field name='acquirer_id' readonly="1" />
						<field name='one_click' />
						<field name='payment_method_ref' readonly="1" />
						<field name='transaction_interface' />
						<field name='version' readonly="1" />
					</group>
					<group>
						<field name="space_id" readonly="1" />
						<field name='method_id' readonly="1" />
						<field name='image_url' readonly="1" />
						<field name='sequence' />
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="view_postfinance_payment_method_tree">
		<field name="name">postfinance.payment.method.tree</field>
		<field name="model">postfinance.payment.method</field>
		<field name="arch" type="xml">
			<tree string="PostFinance Payment Gateways" create="false"
				delete="false" edit="false">
				<field name="sequence" widget="handle" />
				<field name="name" readonly="1" />
				<field name='payment_method_ref' readonly="1" />
				<field name='transaction_interface' />
				<field name='one_click' />
			</tree>
		</field>
	</record>

		<!-- <field name='view_type'>form</field> -->
	<record id="action_postfinance_payment_method"
		model="ir.actions.act_window">
		<field name="name">PostFinance Payment Gateways</field>
		<field name="res_model">postfinance.payment.method</field>
		<field name='view_mode'>tree,form</field>
		<field name="view_id" ref="view_postfinance_payment_method_tree" />
	</record>

</odoo>
