<odoo>
    <data noupdate="1">
        <!-- Cron to update payment transaction state-->

        <record model="ir.cron" id="cron_update_lastest_postfinance_state">
            <field name='name'>Update postfinance state of transaction</field>
            <field name='interval_number'>3</field>
            <field name='interval_type'>hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="payment_postfinance_flex.model_payment_acquirer"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_postfinance_state()</field>
        </record>

    </data>
</odoo>