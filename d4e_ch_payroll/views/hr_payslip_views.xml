<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="d4e_view_hr_payslip_form" model="ir.ui.view">
        <field name="name">hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//button[@name='compute_sheet']" position="after">-->
<!--                <button string="Compute Sheet table" name="update_hr_payslip_lines_copy" type="object" states="draft,verify"-->
<!--                        class="oe_highlight" title="Recompute the payslip lines"/>-->
<!--            </xpath>-->

            <xpath expr="//field[@name='credit_note']" position="after">
                <field name="wage_type" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='number_of_days']" position="replace">
                <field name="number_of_days" sum="Total Working Days" readonly="1" force_save="1"
                       attrs="{'column_invisible': [('parent.wage_type', '=', 'hourly')]}"/>
            </xpath>
            <xpath expr="//field[@name='number_of_hours']" position="replace">
                <field name="number_of_hours" force_save="1"
                       attrs="{'column_invisible': [('parent.wage_type', '!=', 'hourly')]}"/>
                <field name="hourly_rate" attrs="{'column_invisible': [('parent.wage_type', '!=', 'hourly')]}"/>
            </xpath>

            <xpath expr="//page/field[@name='input_line_ids']/tree/field[@name='amount']" position="replace">
                <field name="amount" string="Quantité / Montant"/>
            </xpath>
            <xpath expr="//page/field[@name='input_line_ids']/form/group/field[@name='amount']" position="replace">
                <field name="amount" string="Quantité / Montant"/>
            </xpath>

            <xpath expr="//field[@name='input_line_ids']" position="after">
                <separator string="Salaire"/>

                <!--                <field name="line_ids" invisible="1"/>-->
                <field name="line_ids" invisible="1" colspan="4" nolabel="1">
                    <tree name="salary 1" string="Salary Structure" editable="bottom" decoration-info="total == 0"
                          create="0" delete="0">
                        <field name="name" invisible="1"/>
                        <field name="code" readonly="1" force_save="1"/>
                        <field name="type" readonly="0" force_save="1"/>
                        <field name="salary_rule_id" readonly="1" force_save="1"/>
                        <!--                        <field name="slip_line_id" />-->
                        <field name="note" readonly="1" force_save="1"/>
                        <field name="quantity" readonly="1" force_save="1"/>
                        <field name="rate" readonly="1" force_save="1"/>
                        <field name="amount" force_save="1"/>
                        <field name="total" readonly="1" force_save="1"/>
                        <field name="category_id" readonly="1" force_save="1" invisible="1"/>
                        <field name="sequence" invisible="1" readonly="1" force_save="1"/>
                        <field name="payslip_rubrique" invisible="1" readonly="1"/>
                    </tree>
                    <form string="Payslip Line">
                        <group col="4">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="sequence"/>
                            <field name="quantity" attrs="{'readonly':[('verification','=',True)]}"/>
                            <field name="rate" attrs="{'readonly':[('verification','=',True)]}"/>
                            <field name="amount" attrs="{'readonly':[('verification','=',True)]}"/>
                            <field name="total"/>
                            <field name="salary_rule_id"/>
                            <!--                            <field name="slip_line_id" />-->
                            <field name="note"/>
                            <field name="verification" invisible="1"/>
                            <field name="payslip_rubrique"/>
                        </group>
                    </form>
                </field>
                <field name="line_ids_employee_section_ids" colspan="4" nolabel="1" widget="section_and_note_one2many">
                    <tree string="Salary Structure" editable="bottom" create="false" delete="false">
                        <field name="name" string="Rules" readonly="1"  invisible="0" decoration-danger="display_type=='line_note'" decoration-bf="display_type=='line_note'" force_save="1"/>
                        <field name="display_type" invisible="1"/>
                        <field name="code" readonly="1" force_save="1"/>
                        <field name="type" readonly="1" force_save="1" invisible="1"/>
                        <field name="salary_rule_id" invisible="1" readonly="1" force_save="1"/>
                        <field name="note" readonly="0" force_save="1"/>
                        <field name="quantity" readonly="1" force_save="1"/>
                        <field name="rate" readonly="1" force_save="1"/>
                        <field name="amount" readonly="1" force_save="1"/>
                        <field name="total" readonly="1" force_save="1"/>
                        <field name="category_id" readonly="1" force_save="1" invisible="1"/>
                        <field name="sequence" invisible="1" readonly="0" force_save="1"/>
                        <field name="payslip_rubrique" invisible="1" readonly="1"/>
                    </tree>

                    <form string="Payslip Line">
                        <group>
                            <group>
                                <field name="name_copy" readonly="1"/>
                                <field name="category_id_copy" readonly="1"/>
                                <field name="quantity" attrs="{'readonly':[('verification','=',True)]}"/>
                                <field name="amount" attrs="{'readonly':[('verification','=',True)]}"/>
                                <field name="salary_rule_id_copy" readonly="1"/>
                                <field name="payslip_rubrique"/>
                            </group>
                            <group>
                                <field name="code_copy" readonly="1"/>
                                <field name="sequence_copy" readonly="1"/>
                                <field name="rate" attrs="{'readonly':[('verification','=',True)]}"/>
                                <field name="total" readonly="1"/>
                                <field name="note"/>
                            </group>
                        </group>
                        <field name="name" invisible="1"/>
                        <field name="code" invisible="1"/>
                        <field name="sequence" invisible="1"/>
                        <field name="total" invisible="1"/>
                        <field name="salary_rule_id" invisible="1"/>
                        <field name="verification" invisible="1"/>
                    </form>
                </field>
            </xpath>


            <!--            <xpath expr="//field[@name='line_ids']/tree" position="replace">-->
            <!--                <tree string="Salary Structure" editable="bottom" decoration-info="total == 0" create="0" delete="0">-->
            <!--                    <field name="name" invisible="1"/>-->
            <!--                    <field name="code" readonly="1" force_save="1"/>-->
            <!--                    <field name="category_id" readonly="1" force_save="1"/>-->
            <!--                    <field name="sequence" invisible="1" readonly="1" force_save="1"/>-->
            <!--                    <field name="quantity" readonly="1" force_save="1"/>-->
            <!--                    <field name="rate" readonly="1" force_save="1"/>-->
            <!--                    <field name="salary_rule_id" groups="base.group_no_one" readonly="1" force_save="1"/>-->
            <!--                    <field name="amount" readonly="1" force_save="1"/>-->
            <!--                    <field name="total" readonly="1" force_save="1"/>-->
            <!--                </tree>-->
            <!--            </xpath>-->

            <xpath expr="//page[@name='worked_days_input']" position="attributes">
                <attribute name="string">salary</attribute>
            </xpath>


            <xpath expr="//page[@name='worked_days_input']" position="after">
                <page string="Employer share" name="employer_share">
                    <field name="line_ids_employee_share_ids" colspan="4" nolabel="1"
                           widget="section_and_note_one2many">
                        <tree name="salary 2" editable="bottom" create="false" delete="false">
                            <field name="name"  readonly="1" string="Rules" invisible="0" decoration-danger="display_type=='line_note'" decoration-bf="display_type=='line_note'" force_save="1"/>
                            <field name="display_type" invisible="1"/>
                            <field name="code" readonly="1" force_save="1"/>
                            <field name="type" readonly="1" force_save="1" invisible="1"/>
                            <field name="salary_rule_id" invisible="1" readonly="1" force_save="1"/>
                            <field name="note" invisible="1" readonly="0" force_save="1"/>
                            <field name="quantity" readonly="1" force_save="1"/>
                            <field name="rate" readonly="1" force_save="1"/>
                            <field name="amount" readonly="1" force_save="1"/>
<!--                            <field name="total" invisible="1" readonly="1" force_save="1"/>-->
                            <field name="total"  readonly="1" force_save="1"/>
                            <field name="category_id" readonly="1" force_save="1" invisible="1"/>
                            <field name="sequence" invisible="1" readonly="0" force_save="1"/>
                            <field name="payslip_rubrique" invisible="1" readonly="1"/>
                        </tree>
                        <form string="Payslip Line">
                            <group>
                                <group>
                                    <field name="name_copy" readonly="1"/>
                                    <field name="category_id_copy" readonly="1"/>
                                    <field name="quantity" attrs="{'readonly':[('verification','=',True)]}"/>
                                    <field name="amount" attrs="{'readonly':[('verification','=',True)]}"/>
                                    <field name="salary_rule_id_copy" readonly="1"/>
                                    <field name="payslip_rubrique"/>
                                </group>
                                <group>
                                    <field name="code_copy" readonly="1"/>
                                    <field name="sequence_copy" readonly="1"/>
                                    <field name="rate" attrs="{'readonly':[('verification','=',True)]}"/>
                                    <field name="total" readonly="1"/>
                                    <field name="note"/>
                                </group>
                            </group>
                            <field name="name" invisible="1"/>
                            <field name="code" invisible="1"/>
                            <field name="sequence" invisible="1"/>
                            <field name="total" invisible="1"/>
                            <field name="salary_rule_id" invisible="1"/>
                            <field name="verification" invisible="1"/>
                        </form>
                    </field>
                </page>
            </xpath>

            <xpath expr="//page[@name='worked_days_input']" position="after">
                <page string="Calculation basis " name="base de calcul">
                    <field name="line_ids_employee_basis_ids" colspan="4" nolabel="1"
                           widget="section_and_note_one2many" >
                        <tree name="salary 3" editable="bottom" create="false" delete="false">
                            <field style="width:15% !important;"  name="name"  readonly="1" string="Rules" invisible="0" decoration-danger="display_type=='line_note'" decoration-bf="display_type=='line_note'" force_save="1"/>
                            <field name="display_type" invisible="1"/>
                            <field style="width:15% !important;"  name="code" readonly="1" force_save="1"/>
                            <field name="type" readonly="1" force_save="1" invisible="1"/>
                            <field name="salary_rule_id" invisible="1" readonly="1" force_save="1"/>
                            <field name="quantity" readonly="1" invisible="1" force_save="1"/>
                            <field name="rate" readonly="1" invisible="1" force_save="1"/>
                            <field name="amount" readonly="1" invisible="1" force_save="1"/>
                            <field name="total"  readonly="1" force_save="1"/>
                            <field name="category_id" readonly="1" force_save="1" invisible="1"/>
                            <field name="sequence" invisible="1" readonly="0" force_save="1"/>
                            <field name="payslip_rubrique" invisible="1" readonly="1"/>
                            <field name="note"  invisible="1" readonly="1" force_save="1"/>
                        </tree>
                        <form string="Payslip Line">
                            <group>
                                <group>
                                    <field name="name_copy" readonly="1"/>
                                    <field name="category_id_copy" readonly="1"/>
                                    <field name="quantity" attrs="{'readonly':[('verification','=',True)]}"/>
                                    <field name="amount" attrs="{'readonly':[('verification','=',True)]}"/>
                                    <field name="salary_rule_id_copy" readonly="1"/>
                                    <field name="payslip_rubrique"/>
                                </group>
                                <group>
                                    <field name="code_copy" readonly="1"/>
                                    <field name="sequence_copy" readonly="1"/>
                                    <field name="rate" attrs="{'readonly':[('verification','=',True)]}"/>
                                    <field name="total" readonly="1"/>
                                    <field name="note"/>
                                </group>
                            </group>
                            <field name="name" invisible="1"/>
                            <field name="code" invisible="1"/>
                            <field name="sequence" invisible="1"/>
                            <field name="total" invisible="1"/>
                            <field name="salary_rule_id" invisible="1"/>
                            <field name="verification" invisible="1"/>
                        </form>
                    </field>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_payslip_done']" position="after">
                    <button string="Send mail to employee" name="action_payslip_sent" type="object" attrs="{'invisible': [('state', 'in', ['draft','cancel'])]}" class="oe_highlight" context="{'payslip_generate_pdf': True}"/>
<!--                    <button string="Send mail to employee" name="send_mail_condition" type="object" attrs="{'invisible': [('state', 'in', ['draft','cancel'])]}" class="oe_highlight" context="{'payslip_generate_pdf': True}"/>-->
            </xpath>

            <xpath expr="//field[@name='worked_days_line_ids']/tree" position="replace">
                <tree string="Worked Days" editable="bottom">
                    <field name="work_entry_type_id" readonly="0" force_save="1"/>
                    <field name="name"/>
                    <field name="number_of_days" string="Number of Days" sum="Total Working Days" readonly="0" force_save="1"/>
                    <field name="number_of_hours" string="Number of Hours" readonly="0" force_save="1"/>
                    <field name="amount" readonly="1" sum="Total Amount" force_save="1"/>
                    <field name="is_paid" invisible="True" readonly="1" force_save="1"/>
                    <field name="sequence" invisible="True" readonly="1" force_save="1"/>
                </tree>
            </xpath>


            <xpath expr="//page[@name='salary_computation']" position="replace">
            </xpath>

        </field>
    </record>

    <record id="d4e_payroll_hr_work_entry_type_view_form_inherit" model="ir.ui.view">
        <field name="name">payroll.hr.work.entry.type.view.form.inherit</field>
        <field name="model">hr.work.entry.type</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_work_entry_type_view_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='round_days']" position="before">
                <field name="visible_in_payslip"/>
            </xpath>
        </field>
    </record>

</odoo>