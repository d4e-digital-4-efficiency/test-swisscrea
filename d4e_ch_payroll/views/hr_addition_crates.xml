<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="action_view_fund_form" model="ir.ui.view">
        <field name="name">hr.fund.form</field>
        <field name="model">hr.funds</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="type_of_crate"/>
                            <field name="Name_of_fund_insurance"/>
                            <field name="case_number"/>
                        </group>
                        <group>
                            <field name="customer_number"/>
                            <field name="contract_number"/>
                            <field name="street"/>
                            <field name="zip_Location"/>
                            <field name="phone"/>
                            <field name="e_mail"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_view_fund_tree" model="ir.ui.view">
        <field name="name">hr.fund.tree</field>
        <field name="model">hr.funds</field>
        <field name="arch" type="xml">
            <tree>
                <field name="Name_of_fund_insurance"/>
                <field name="type_of_crate"/>
                <field name="case_number"/>
                <field name="customer_number"/>
                <field name="contract_number"/>
                <field name="street"/>
                <field name="zip_Location"/>
                <field name="phone"/>
                <field name="e_mail"/>
            </tree>
        </field>
    </record>

    <record id="action_view_fund" model="ir.actions.act_window">
        <field name="name">Additions of crates</field>
        <field name="res_model">hr.funds</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_hr_payroll_global_settings_funds"
            name="Funds / Insurance"
            parent="hr_work_entry_contract.menu_hr_payroll_configuration"
            sequence="1"
            action="action_view_fund"
            groups="base.group_system"/>

