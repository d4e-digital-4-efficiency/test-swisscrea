<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="d4e_inherit_res_partner_view_form_private" model="ir.ui.view">
            <field name="name">res.partner.view.form.private</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_view_form_private"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='zip']" position="replace">
                    <field name="zip" placeholder="ZIP" class="o_address_zip" invisible="0"/>
                    <field name="npa_id" placeholder="ZIP" class="o_address_zip" invisible="1"/>
                </xpath>
                <xpath expr="//form/sheet/group[1]/group[1]">
                    <field name="canton"/>
                    <field name="num_commune_ofs" placeholder="Commune OFS"/>
                </xpath>
            </field>
        </record>

        <record id="d4e_inherit_view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='zip']" position="replace">
                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" invisible="0"/>
                    <field name="npa_id" placeholder="ZIP" class="o_address_zip" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='vat']" position="before">
                    <field name="canton" invisible="not context.get('show_address')"/>
                    <field name="num_commune_ofs" invisible="not context.get('show_address')" placeholder="Commune OFS"/>
                </xpath>  <xpath expr="//field[@name='vat']" position="after">
                    <field name="employee_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>