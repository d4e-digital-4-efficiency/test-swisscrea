<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_run_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.run.inherit.form</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
         <xpath expr="//button[@name='action_validate']" position="after">
                    <button string="Envoyer les fiches par e-mail" name="action_payslip_sent" type="object" attrs="{'invisible': [('state', 'in', ['draft'])]}" class="oe_highlight" context="{'payslip_generate_pdf': True , 'lot':True}"/>
                    <button string="Reset to draft" name="action_lot_draft" type="object" attrs="{'invisible': [('state', 'in', ['draft'])]}" class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>

