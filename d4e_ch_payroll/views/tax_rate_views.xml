<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tax_rate_view_form" model="ir.ui.view">
        <field name="name">Tax Rate Form</field>
        <field name="model">tax.rate</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="code_canton"/>
                            <field name="perception_scale"/>
                            <field name="church_tax"/>
                            <field name="validity_start_date"/>
                        </group>
                        <group>
                            <field name="monthly_taxable_income"/>
                            <field name="francs_taxes"/>
                            <field name="taxes_percent"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tax_rate_view_list" model="ir.ui.view">
        <field name="name">Tax Rate List</field>
        <field name="model">tax.rate</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="code_canton"/>
                <field name="perception_scale"/>
                <field name="church_tax"/>
                <field name="validity_start_date"/>
                <field name="monthly_taxable_income"/>
                <field name="francs_taxes"/>
                <field name="taxes_percent"/>
            </tree>
        </field>
    </record>

    <record id="tax_rate_action" model="ir.actions.act_window">
        <field name="name">Tax Rate List</field>
        <field name="res_model">tax.rate</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="Tax Rates" id="tax_rate_menu" parent="d4e_ch_payroll.suiss_files_menu" action="tax_rate_action" sequence="20"/>

</odoo>