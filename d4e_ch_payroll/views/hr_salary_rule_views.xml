<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_payroll_account.hr_salary_rule_view_form" model="ir.ui.view">
            <field name="name">hr.salary.rule.form.inherit</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='description']" position="after">
                    <page string="Accounting" name="accounting">
                        <group colspan="4">
                            <field name="account_debit"/>
                            <field name="account_credit"/>
                            <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                            <field name="analytical_labels"/>
                            <field name="not_computed_in_net"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="d4e_inherit_hr_salary_rule_form" model="ir.ui.view">
            <field name="name">hr.salary.rule.form</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <!--                <xpath expr="//group[@name='general_conditions']/group[1]" position="after">-->
                <!--                    <group>-->
                <!--                        <field name="rubrique_certificat"/>-->
                <!--                    </group>-->
                <!--                </xpath>-->
                <!--                <xpath expr="//group[@name='main_details']" position="replace">-->
                <!--                     <group name="main_details" >-->
                <!--                         <group>-->
                <!--                             <field name="code"/>-->
                <!--                             <field name="struct_id"/>-->
                <!--                             <field name="appears_on_payslip"/>-->
                <!--                         </group>-->
                <!--                         <group>-->
                <!--                             <field name="Rule_type"/>-->
                <!--                             <field name="sequence"/>-->
                <!--                             <field name="active" widget="boolean_toggle"/>-->
                <!--                         </group>-->
                <!--                     </group>-->
                <!--                 </xpath>-->
                <xpath expr="//h2/field[@name='category_id']" position="replace"/>
                <xpath expr="//label[@for='category_id']" position="replace">
                    <group>
                        <group>
                            <label for="category_id"/>
                            <h2>
                                <field name="category_id"/>
                            </h2>
                        </group>
                        <group>
                            <field name="rule_type"/>
                        </group>
                    </group>
                </xpath>


                <xpath expr="//group[@name='general_conditions']/group[4]" position="after">
                    <group>
                        <field name="base_test" invisible="1"/>
                        <field name="rate_quantity" invisible="1"/>
                        <field name="verification" invisible="1"/>

                    </group>
                    <group></group>
                </xpath>

                <xpath expr="//page[@name='description']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//page[@name='general']" position="after">
                    <page name="Impressions" string="Impressions">
                        <field name="rubrique_certificat"/>
                    </page>
                </xpath>


                <xpath expr="//group[@name='general_conditions']/group[7]" position="replace">
                    <group>
                        <separator string="Description"/>
                        <field name="note"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="d4e_inherit_hr_salary_rule_tree" model="ir.ui.view">
            <field name="name">hr.salary.rule.form</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_list"/>
            <field name="arch" type="xml">
                <xpath expr="field[@name='name']" position="after">
                    <field name="struct_id"/>
                </xpath>
            </field>
        </record>

        <record id="hr_payroll.view_hr_rule_filter" model="ir.ui.view">
        <field name="name">hr.salary.rule.select</field>
        <field name="model">hr.salary.rule</field>
        <field name="arch" type="xml">
            <search string="Search Salary Rule">
                <field name="name" string="Salary Rules" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="category_id"/>
                <field name="struct_id"/>
                <field name="condition_range_min"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
<!--                <filter name="structure" string="Salary Structure" domain="[]"/>-->
                <group col="8" colspan="4" expand="0" string="Group By">
                    <filter string="Category" name="head" context="{'group_by': 'category_id'}"/>
                    <filter string="Salary Structure" name="group_by_struct_id" context="{'group_by': 'struct_id'}"/>
                </group>
            </search>
        </field>
    </record>

    </data>
</odoo>
