<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_wysiwyg" inherit_id="web_editor.assets_wysiwyg" name="Domain Snippet Options Assets">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/d4e_domain_snippet/static/src/js/options.js"></script>
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Domain Snippet Assets">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/css" href="/d4e_domain_snippet/static/lib/owl-carousel/css/owl.carousel.min.css" />
            <link rel="stylesheet" type="text/css" href="/d4e_domain_snippet/static/lib/owl-carousel/css/owl.theme.default.min.css" />
            <link rel="stylesheet" type="text/css" href="/d4e_domain_snippet/static/src/css/index.css" />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/d4e_domain_snippet/static/lib/owl-carousel/js/owl.carousel.min.js"></script>
            <script type="text/javascript" src="/d4e_domain_snippet/static/src/js/snippet.js" crossorigin="use-credentials"></script>
        </xpath>
    </template>
</odoo>
